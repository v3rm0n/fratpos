.modal
    .modal-dialog
        .modal-content
            .modal-header
                button.close(type='button', ng-click='$hide()') &times;
                h4.modal-title  Info
            .modal-body
                .panel.panel-info
                    .panel-heading
                        h3.panel-title Kasutaja
                    .panel-body
                        form.form-horizontal(role='form')
                            .col-md-6
                                .form-group
                                    label.control-label.col-md-4 Eesnimi
                                    .col-md-8
                                        p.form-control-static(ng-bind='user.firstName')
                                .form-group
                                    label.control-label.col-md-4 Saldo
                                    .col-md-8
                                        p.form-control-static(ng-bind='user.balance')
                            .col-md-6
                                .form-group
                                    label.control-label.col-md-4 Perenimi
                                    .col-md-8
                                        p.form-control-static(ng-bind='user.lastName')
                                .form-group
                                    label.control-label.col-md-4 Staatus
                                    .col-md-8
                                        p.form-control-static(ng-bind='user.status.name')
                .panel.panel-info
                    .panel-heading
                        h3.panel-title Tarbimine
                    .panel-body
                        .row(ng-show='stat.popularProducts.length > 0')
                            .col-md-6
                                ul
                                    li(ng-repeat='product in stat.popularProducts')
                                        | {{product.product.name}}
                                        span.badge.pull-right(style='background-color: {{colors[$index]}}') {{product.count}}

                            .col-md-6
                                canvas(width='300', height='155', doughnut-chart='chartdata')
                        .row(ng-hide='stat.popularProducts.length > 0')
                            .col-md-12
                                p Valitud kasutajal ei ole käesoleval perioodil ühtegi tehingut.
                br
